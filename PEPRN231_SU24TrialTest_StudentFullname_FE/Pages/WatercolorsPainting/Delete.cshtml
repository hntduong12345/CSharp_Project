@page
@model PEPRN231_SU24TrialTest_StudentFullname_FE.Pages.WatercolorsPainting.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Equipment</h4>
    <hr />

    @if (Model.Message.Length > 0)
    {
        <p class="text-danger">@Model.Message</p>
    }

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Painting.PaintingName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Painting.PaintingDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Painting.PaintingAuthor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Painting.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Painting.PublishYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Painting.CreatedDate)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Painting.Style.StyleName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Painting.PaintingId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
